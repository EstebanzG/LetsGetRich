{% extends 'base.html.twig' %}

{% block title %}Lets Get Rich !{% endblock %}

{% block body %}
    {% block header %}
        {% include "partials/_header-back.html.twig" %}
    {% endblock %}
    <div class="container d-flex justify-content-center align-item-center">
        <div class="col-md-3 col-sm-1 col-lg-4 bg-white rounded-5 d-flex justify-content-center" >
            <div class="w-75">
                {{ form_start(newAccount) }}
                <h2 class="mb-3 mt-3 text-center">Nouveau compte</h2>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success mt-1">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="form-group">
                    {{ form_label(newAccount.Name) }}
                    {{ form_widget(newAccount.Name) }}
                    <div class="form-error">
                        {{ form_errors(newAccount.Name) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(newAccount.Bank) }}
                    {{ form_widget(newAccount.Bank) }}
                    <div class="form-error">
                        {{ form_errors(newAccount.Bank) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(newAccount.Balance) }}
                    {{ form_widget(newAccount.Balance) }}
                    <div class="form-error">
                        {{ form_errors(newAccount.Balance) }}
                    </div>
                </div>
                <div class="mb-3 mt-3 text-center">{{ form_row(newAccount.submit) }}</div>
                {{ form_end(newAccount) }}
            </div>
        </div>
    </div>
{% endblock %}